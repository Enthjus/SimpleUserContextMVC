@model SimpleUser.MVC.Models.IndexVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Users" asp-action="Index" method="post">
    <p>
        Name: <input type="text" name="Filter" value="@Model.Filter" />
        <br />
        Page size: <input type="text" name="PageSize" value="@Model.PageSize" />
        <input type="submit" value="Filter" />
    </p>
</form>
<div>
    @await Component.InvokeAsync("User", new IndexVM { Filter = Model.Filter, PageIndex = Model.PageIndex, PageSize = Model.PageSize })
</div>